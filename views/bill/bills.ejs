<h1 id="page-title"><%= title %></h1>
<a id="add-bill" href="javascript:;">点我新增账单●﹏●</a>
<p id="operate-links"><a href="/bills/payout">只看支出</a><a href="/bills/payin">只看收入</a></p>
<table id="bills">
	<tr>
		<th class="title">标题</th>
		<th class="content">内容</th>
		<th class="money">金额（元）</th>
		<th class="date">时间</th>
		<th class="operate">操作</th>
	</tr>
	<% bills.forEach(function (bill){ %>
		<tr>
			<td class="title"><%= bill.title %></td>
			<td class="content"><%= bill.content %></td>
			<td class="money"><% if (bill.bill_flg == 0) { %>-<% } else { %>+<% } %><%= bill.money %></td>
			<td class="date"><%= bill.dateStr %></td>
			<td class="operate"><a href="#" class="update-bill" data-id="<%= bill.id %>" data-title="<%= bill.title %>" data-content="<%= bill.content %>" data-flg="<%= bill.bill_flg %>" data-money="<%= bill.money %>" data-date="<%= bill.dateStr %>">修改</a> | <a href="bills/destroy/<%= bill.id %>">删除</a></th>
		</tr>
	<% }); %>
	<tr>
		<td colspan="5">剩余总金额<%= total %>元</td>
	</tr>
</table>
<form id="create-form" class="bill-form" action="bills/create" method="post">
	<h4>新记账单</h4>
	<label for="bill_title"><span>标题:</span><input required type="text" name="bill_title" /></label>
	<label for="bill_content"><span>内容:</span><input required type="text" name="bill_content" list="bill_content" />
	</label>
	<label for="bill_flg"><span>流向:</span><input required type="text" name="bill_flg" list="bill_flg" />
		<datalist id="bill_flg">
			<option value="支出"></option>
			<option value="收入"></option>
		</datalist>
	</label>
	<label for="bill_money"><span>金额:</span><input required type="text" name="bill_money" /></label>
	<label for="bill_date"><span>时间:</span><input required type="date" name="bill_date" /></label>
	<button type="submit">提交</button>
</form>
<form id="update-form" class="bill-form" action="bills/update" method="post">
	<h4>修改账单</h4>
	<label for="bill_title"><span>标题:</span><input required type="text" name="bill_title" /></label>
	<label for="bill_content"><span>内容:</span><input required type="text" name="bill_content" list="bill_content" />
	</label>
	<label for="bill_flg"><span>流向:</span><input required type="text" name="bill_flg" list="bill_flg" />
		<datalist id="bill_flg">
			<option value="支出"></option>
			<option value="收入"></option>
		</datalist>
	</label>
	<label for="bill_money"><span>金额:</span><input required type="text" name="bill_money" /></label>
	<label for="bill_date"><span>时间:</span><input required type="date" name="bill_date" /></label>
	<button type="submit">提交</button>
</form>
<div id="mask"></div>
<script type="text/javascript" src="/javascripts/require.js" data-main="/javascripts/start/bill
"></script>