<h1 id="page-title"><%= title %></h1>
<p id="operate-links"><a href="/bills">返回</a><a href="/bills/payin">只看收入</a></p>
<table id="bills">
	<tr>
		<th class="title">标题</th>
		<th class="content">内容</th>
		<th class="money">金额（元）</th>
		<th class="date">时间</th>
		<th class="operate">操作</th>
	</tr>
	<% bills.forEach(function (bill){ %>
		<tr>
			<td class="title"><%= bill.title %></td>
			<td class="content"><%= bill.content %></td>
			<td class="money"><% if (bill.bill_flg == 0) { %>-<% } else { %>+<% } %><%= bill.money %></td>
			<td class="date"><%= bill.dateStr %></td>
			<td class="operate"></th>
		</tr>
	<% }); %>
	<tr>
		<td colspan="5">您支出<%= total %>元</td>
	</tr>
</table>